{
  "consumer": {
    "name": "GitEnBoiteGitRepo"
  },
  "provider": {
    "name": "GitEnBoiteService"
  },
  "interactions": [
    {
      "description": "a new file to commit",
      "providerState": "blank",
      "request": {
        "method": "POST",
        "path": "/repos/a-repo-id/branches/a-branch-name/commits",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "files": [
            {
              "path": "features/test.feature",
              "content": "Feature: Test"
            }
          ],
          "author": {
            "name": "Bob",
            "email": "bob@smartbear.com"
          },
          "message": "a message"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
        }
      }
    },
    {
      "description": "a request to connect a valid repo for the first time",
      "providerState": "a new repo",
      "request": {
        "method": "POST",
        "path": "/repos",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "repoId": "a-repo-id",
          "remoteUrl": "https://github.com/a-repo.git"
        }
      },
      "response": {
        "status": 202,
        "headers": {
        }
      }
    },
    {
      "description": "a request to connect the same repo again",
      "providerState": "a repo exists",
      "request": {
        "method": "POST",
        "path": "/repos",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "repoId": "a-repo-id",
          "remoteUrl": "https://github.com/a-repo.git"
        }
      },
      "response": {
        "status": 302,
        "headers": {
        }
      }
    },
    {
      "description": "a request to fetch the repo",
      "providerState": "a repo has been connected",
      "request": {
        "method": "POST",
        "path": "/repos/a-repo-id"
      },
      "response": {
        "status": 200,
        "headers": {
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}